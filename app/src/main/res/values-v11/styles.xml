<resources>

    <style name="AppTheme" parent="android:Theme.Holo.Light" />

    <!-- Application title -->
    <style name="LabelColorParent">
        <!--<item name="android:textColor">#4C4C4C</item>-->
    </style>

    <style name="TextViewHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:textColor">#000000</item>-->
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:padding">5dip</item>
    </style>

    <style name="TextViewItemParent" parent="LabelColorParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="TextViewItemName" parent="TextViewItemParent">
        <item name="android:paddingBottom">5dip</item>
        <item name="android:paddingLeft">20dip</item>
        <item name="android:paddingRight">10dip</item>
    </style>

    <style name="TextViewItemValue" parent="TextViewItemParent">
    </style>

    <style name="CheckBox" parent="LabelColorParent">
        <!--<item name="android:colorControlNormal">#FFF</item>-->
        <item name ="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="TextViewTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:textColor">#000000</item>-->
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:paddingBottom">5dip</item>
        <item name="android:paddingLeft">5dip</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">400dip</item>
        <item name="android:maxLength">30</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:gravity">top</item>
        <item name="android:ellipsize">start</item>
    </style>

    <style name="LogLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">20dip</item>
        <item name="android:paddingLeft">20dip</item>
        <item name="android:paddingRight">5dip</item>
    </style>

</resources>